<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ui.common.EmailActivity">

    <TextView
        android:id="@+id/stay_in_the_loop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Stay in the loop"/>

    <TextView
        android:id="@+id/enter_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stay_in_the_loop_text"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:text="Enter your email"
        android:textSize="19sp"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_email_text"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"/>

    <TextView
        android:id="@+id/email_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The email address you entered is not valid."
        android:textSize="14sp"
        android:textColor="@color/colorRed"
        android:visibility="gone"
        android:layout_below="@id/email_edit_text" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_error_text"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        android:layout_marginTop="15dp"
        android:text="Receive news about Faer and the best in sustainable fashion."/>

    <TextView
        android:id="@+id/submit_button"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Skip"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>